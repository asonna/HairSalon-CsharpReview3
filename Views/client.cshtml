<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="jumbotron">
					<h1>IGIT HAIR SALON</h1>
				</div>
				<div class="row">
					<h1>------</h1>
					<h2>Here are all the clients for this stylist:</h2>

					@if (@Model["clients"].Count == 0)
					{
					  <h3>No clients have been added yet!</h3>
					}
					else
					{
					  <ol>
					    @foreach (var client in @Model["clients"])
					    {
					      <li>@client.GetName()</li>
					    }
					  </ol>
					}
					<h2><a href="/clients/new">Add a new client</a></h2>
					<h2><a href="/">Return to Main Page</a></h2>
				</div>
			</div>
		</div>
	</body>
</html>
