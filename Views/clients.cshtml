<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="jumbotron">
					<h1>IGIT HAIR SALON</h1>
				</div>
				<div class="row">
					<h1>Clients List</h1>

					@if (@Model.Count == 0)
					{
					  <p>No clients have been added yet!</p>
					}

					else
					{
					  <h2>Here is your list of clients:</h2>
					  <ul>
					    @foreach (var client in Model)
					    {
					      <li>@client.GetName()</li>
					    }
					  </ul>

					  <form action="/clients/delete" method="post">
					    <button type="submit">Clear all clients</button>
					  </form>
					}

					<p><a href="/clients/new">Add a new client</a></p>
					<p><a href="/">Main Page</a></p>
				</div>
			</div>
		</div>
	</body>
</html>
