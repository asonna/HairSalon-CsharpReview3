<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="jumbotron">
					<h1>IGIT HAIR SALON</h1>
				</div>
				<div class="row">
					<h1>All Stylist List</h1>

					@if (@Model.Count == 0)
					{
					  <h2>There are no stylists yet!</h2>
					}
					else
					{

						<ul>
							@foreach (var stylist in Model)
							{
								<li><a href="/stylist/@stylist.GetId()">@stylist.GetId() - @stylist.GetName()</a></li>
								<!-- <p><a href="/stylist/@stylist.GetId()/up">Update</a> |
								<a href="/stylist/@stylist.GetId()/delete">Delete</a></p> -->
								<br>
							}
						</ul>
					}

					<div class="footer-links">
				    <h2><a href="/stylists/new">Add a new stylist</a></h2>
				    <h2><a href="/clients/new">Add a new client</a></h2>
				    <h2><a href="/clients">View all clients</a></h2>
					</div>
					<!-- <h2><a href="/">Main Page</a></h2> -->
				</div>
			</div>
		</div>
	</body>
</html>
