<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="jumbotron">
					<h1>IGIT HAIR SALON</h1>
				</div>
				<div class="row">
					<h1>Add a New Client</h1>

					@if(@Model.Count > 0)
					{
						<form action="/clients/new" method="post">
							<div class="form-group">
								<label for="client-name">Name:</label>
								<input id="client-name" name="client-name" type="text" required autofocus>
							</div>
							<div class="form-group">
								<span>Stylist:</span>
								<select name="stylistId">
									@foreach (var stylist in Model)
									{
										<option value="@stylist.GetId()">@stylist.GetName()</option>
									}
								</select>
							</div>
							<button type="submit" class="btn btn-default">Add new client</button>
						</form>
					}
					else
					{
						<h2>Please add at least one stylist before adding a client.</h2>
					}

					<div class="footer-links">
				    <h4><a href="/stylists/new">Add new stylist</a></h4>
				    <h4><a href="/">Main Page</a></h4>
					</div>

				</div>
			</div>
		</div>
	</body>
</html>
