<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="jumbotron">
					<h1>IGIT HAIR SALON</h1>
				</div>
				<div class="row">
					<h1>Client Update: @Model["client"].GetName()</h2>

					@if(@Model.Count > 0)
					{
					    <form action="/client/update/@Model["client"].GetId()" method="post">
				        <input type="hidden" name="_method" value="PATCH">
				        <input name="client-id" type="hidden" value="@Model["client"].GetId()">
				        <div class="form-group">
				            <label for="client-name">Name: </label>
				            <input type="text" name="client-name" id="client-name" placeholder="Tom" value="@Model["client"].GetName()" required autofocus>
				        </div>
				        <div class="form-group">
				            <span>Stylist: </span>
				            <select name="stylist-id">
				            @foreach (var stylist in Model["all stylists"])
				            {
				                @if(stylist.GetId() == Model["client"].GetStylistId())
				                {
				                    <option value="@stylist.GetId()">@stylist.GetName()</option>
				                }
				            }
				            @foreach (var stylist in Model["all stylists"])
				            {
				                @if(stylist.GetId() == Model["client"].GetStylistId())
				                {
				                }
				                else
				                {
				                    <option value="@stylist.GetId()">@stylist.GetName()</option>
				                }
				            }
				            </select>
				        </div>
				        <button type="submit" class="btn btn-default">Update Client</button>
					    </form>
					}
					else
					{
					    <h2>You need to have at least one stylist before client can be added.</h2>
					}

					<div class="footer-links">
					    <h4><a href="/stylist/new">Add new stylist.</a></h4>
					    <h4><a href="/">Return to Main Page</a></h4>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
